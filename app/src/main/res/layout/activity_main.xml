<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyDark"
        tools:context=".MainActivity">

    <TextView
            android:text="CEMENTERIO MUNICIPAL DEL AYUNTAMIENTO DE ALBACETE"
            android:textStyle="bold"
            android:layout_width="278dp"
            android:layout_height="57dp" android:id="@+id/txt_TituloInicio"
            android:textColor="@color/colorPurpleDark" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="100dp"
            android:gravity="center_horizontal"/>

    <Button
            android:text="INVITADOS"
            android:onClick="IniciarInvitadosInicio"
            android:background="@color/colorPurpleDark"
            android:textColor="@color/colorGreyLight"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/btn_MainToInvitados"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="250dp"
            android:typeface="sans"/>

    <Button
            android:text="INICIAR SESIÃ“N"
            android:onClick="IniciarIniciarSesion"
            android:background="@color/colorPurpleDark"
            android:textColor="@color/colorGreyLight"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/btn_MainToIniciarSesion"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"
            android:typeface="sans" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/btn_MainToInvitados" android:layout_marginTop="50dp"/>

    <TextView
            android:text="Registro"
            android:onClick="IniciarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_Registro"
            android:textColor="@color/colorPurpleDark"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_MainToIniciarSesion" android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_aytoalbacete" android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txt_TituloInicio"
            android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>